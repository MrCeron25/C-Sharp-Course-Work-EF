<Window x:Class="WpfApp1.WindowProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="WindowProperties" 
        Height="200" 
        Width="400"
        MaxHeight="200"
        MaxWidth="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Характеристика"
                   HorizontalAlignment="Center"/>
            <TextBox Margin="10,10,10,10"
                     x:Name="Property"
                     Height="20"
                     TextChanged="Property_TextChanged"/>
            <Label Content="Значение"
                   HorizontalAlignment="Center"/>
            <TextBox Margin="10,10,10,10"
                     x:Name="Value"
                     Height="20"
                     TextChanged="Value_TextChanged"/>
            <Button Margin="10,10,10,70"
                    Content="Button"
                    x:Name="Button"
                    Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
